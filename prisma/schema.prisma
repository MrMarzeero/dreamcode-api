generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
 id           String                   @id @default(uuid())
 username     String                   @unique
 email        String                   @unique 
 password     String                   
 createdAt    DateTime                 @default(now())
 quizzes      Quiz[]                
 @@map("users")
}

model Quiz {
  id          String                   @id @default(uuid())
  name        String  
  author      User                     @relation(fields: [authorId], references: [id])
  authorId    String
  questions   Question[]
  @@map("quizzes")
}

model Question {
  id          String                    @id @default(uuid())
  statement   String                 
  options     String[]                  @default([])
  hint        String
  topics      String[]
  answer      String
  quiz        Quiz                      @relation(fields: [quizId], references: [id])
  quizId      String
  @@map("questions")
}
