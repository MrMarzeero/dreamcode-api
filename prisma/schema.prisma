generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
 id           String                   @id @default(uuid())
 username     String                   @unique
 email        String                   @unique 
 password     String                   
 createdAt    DateTime                 @default(now())
 quizzes      Quiz[]    
 cpquestions  CPQuest[]            
 @@map("users")
}

model Quiz {
  id          String                   @id @default(uuid())
  name        String  
  author      User                     @relation(fields: [authorId], references: [id])
  authorId    String
  questions   Question[]
  createdAt   DateTime                 @default(now())
  @@map("quizzes")
}

model Question {
  id          String                    @id @default(uuid())
  statement   String                 
  options     String[]                  @default([])
  hint        String
  topics      String[]
  answer      String
  quiz        Quiz                      @relation(fields: [quizId], references: [id])
  quizId      String
  @@map("questions")
}

model CPQuest {
  id          String                   @id @default(uuid())
  name        String
  statement   String
  input       String
  output      String
  sample_input  String  
  sample_output String
  notes       String? 
  author      User                    @relation(fields: [authorId], references: [id])
  solve    CPSolution?
  authorId    String
  @@map("cpquests")
}

model CPSolution {
  id          String                 @id @default(uuid())
  solution    String
  question    CPQuest                @relation(fields: [questionId], references: [id])
  questionId  String                 @unique
  @@map("cpsolutions")
}

